{% extends 'base.html.twig' %}

{% block title %}Tes decks
{% endblock %}

{% block body %}


	<style>

		.decks {
			display: flex;
			flex-wrap: wrap;
			justify-content: space-around;
			gap: 20px;
		}

		.deck {
			border: 2px solid #ccc;
			border-radius: 10px;
			padding: 10px;
		}

		.deck-id {
			margin-top: 0;
		}

		.cards {
			display: flex;
			flex-wrap: wrap;
			gap: 10px;
		}

		.card {
			border: 1px solid #ccc;
			border-radius: 5px;
			padding: 10px;
			width: 200px;
		}

		.card-image {
			width: 100%;
			height: 150px;
			object-fit: cover;
			border-radius: 5px;
		}

		.card-name {
			margin-top: 0;
			font-size: 1.2em;
		}

		.card-category,
		.card-hp {
			margin-bottom: 5px;
		}

		.card-description {
			margin-bottom: 0;
		}
	</style>
	<h1>Your Decks</h1>
	{% for deck in decks %}
		{{ dump(deck) }}
		<h2>Deck #{{ deck.id }}</h2>
		<ul>
			{% for carte in deck.cartes %}
				{# {{ dump(carte) }} #}
				<li>{{ carte.name }}
					({{ carte.hp }}
					HP) -
					{{ carte.category }}</li>
			{% endfor %}
		</ul>
	{% endfor %}
{% endblock %}
