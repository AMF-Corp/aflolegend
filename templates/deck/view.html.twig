{% extends 'base.html.twig' %}

{% block title %}Tes Decks
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center">Tes Decks</h1>
		{% for deck in decks %}
			<div class="deck">
				<h2 class="deck-title">Deck #{{ deck.id }}</h2>
				<div class="cards">
					{% for carte in deck.cartes %}
						<div class="card">
							<img src="{{ carte.imageUrl }}" alt="Image de {{ carte.name }}" class="card-image">
							<div class="card-info">
								<h5>{{ carte.name }}</h5>
								<p>Category:
									{{ carte.category }}</p>
								<p>Description:
									{{ carte.description }}</p>
								<p>HP:
									{{ carte.hp }}</p>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}

{% block stylesheets %}
	<style>
		.container {
			max-width: 1200px;
			margin: auto;
			padding-top: 20px;
		}

		.deck {
			margin-bottom: 20px;
			padding: 15px;
			border: 2px solid #dedede;
			border-radius: 8px;
			background: #f9f9f9;
		}

		.deck-title {
			color: #333;
			font-size: 24px;
			text-shadow: 1px 1px 1px #aaa;
		}

		.cards {
			display: flex;
			flex-wrap: wrap;
			gap: 15px;
			justify-content: space-around; /* Improved alignment */
		}

		.card {
			border: 1px solid #ccc;
			border-radius: 5px;
			width: 200px; /* Fixed width */
			overflow: hidden;
		}

		.card-image {
			width: 100%;
			height: 300px; /* Adjusted for better aspect ratio */
			object-fit: cover;
		}

		.card-info {
			padding: 10px;
			background: #fff;
			box-shadow: 2px 2px 5px #ccc;
		}

		.card-info h5 {
			margin-top: 0;
			font-size: 16px;
			color: #333;
		}

		.card-info p {
			margin: 5px 0;
			font-size: 14px;
			color: #666;
		}

		@media(max-width: 768px) {
			.cards {
				justify-content: center;
			}
			.card {
				width: 100%; /* Full width on small screens */
			}
		}
	</style>
{% endblock %}
