{% extends 'base.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
    <h1>Club</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ club.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ club.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_club_index') }}">Retour liste</a>

    {% if is_granted("ROLE_ADMIN") or app.user == club.user  %}
        <a href="{{ path('app_club_edit', {'id': club.id}) }}">Modifier</a>
        {{ include('club/_delete_form.html.twig') }}
    {% endif %}
    
{% endblock %}
