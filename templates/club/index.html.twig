{% extends 'base.html.twig' %}

{% block title %}Club index{% endblock %}

{% block body %}
    <h1>Club index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td>{{ club.id }}</td>
                <td>{{ club.nom }}</td>
                <td>
                    
                    {% if is_granted("ROLE_ADMIN") or app.user == club.user  %}
                        <a href="{{ path('app_club_show', {'id': club.id}) }}">Voir</a>
                        <a href="{{ path('app_club_edit', {'id': club.id}) }}">Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_club_new') }}">Cr√©er un nouveau</a>
{% endblock %}
